<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vmForgotPass"
            type="com.nala.businesslogic.viewmodel.activities.ViewModelForgotPassword" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".view.activities.ActivityForgotPassword">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_eighty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_twenty"
                    android:onClick="@{()->vmForgotPass.clickBackPress()}"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/margin_seven">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_backs" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_eighteen"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/cl_toolbar" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/margin_twenty" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_twenty" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_twenty" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_forgot"
            android:layout_width="@dimen/margin_hundred"
            android:layout_height="@dimen/margin_hundred"
            android:layout_marginTop="@dimen/margin_ten"
            android:src="@drawable/ic_facebook_icon"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/guideline_top" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_fp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twenty"
            android:text="@string/str_forgot_password"
            android:textSize="@dimen/textsize_thirty_six"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/img_forgot" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_fp_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_five"
            android:layout_marginTop="@dimen/margin_twelve"
            android:layout_marginEnd="@dimen/margin_twenty_five"
            android:text="@string/str_forgot_password_desc"
            android:textAlignment="center"
            android:textSize="@dimen/textsize_eighteen"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/txt_fp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinputlayout_forgot_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_twenty"
            app:errorEnabled="@{vmForgotPass.observerErrorEnabledEmail}"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/txt_fp_desc"
            app:setEnabledTIL="@{!vmForgotPass.observerProgressBar}"
            app:setError="@{vmForgotPass.observerErrorEmail}">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="@string/str_email_hint"
                android:inputType="textEmailAddress"
                android:text="@={vmForgotPass.observerEmail}"
                android:textColor="@color/colorBlack" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_fifty_five"
            android:layout_marginTop="@dimen/margin_twelve"
            android:background="@drawable/curve_view_360"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="@{()->vmForgotPass.clickForgotPass()}"
            android:text="@string/str_submit"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_eighteen"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/textinputlayout_forgot_email" />


        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_submit" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_backs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_five"
            android:layout_marginEnd="@dimen/margin_twenty_five"
            android:text="@string/str_back_to_sign"
            android:textAlignment="center"
            android:onClick="@{()->vmForgotPass.clickBackPress()}"
            android:textSize="@dimen/textsize_eighteen"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
            app:layout_constraintLeft_toRightOf="@id/guideline_left"
            app:layout_constraintRight_toLeftOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@+id/v_divider" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>