<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vmSignIn"
            type="com.nala.businesslogic.viewmodel.ViewModelSignIn" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".view.activities.ActivitySignIn">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_eighty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_twenty"
                    android:onClick="@{()->vmSignIn.clickBackPress()}"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardElevation="@dimen/margin_seven">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_backs" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textsize_eighteen"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top_curve_view"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/const_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/const_color" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/margin_twenty" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/margin_twenty" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_twenty" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_twenty" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_view"
            app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/guideline_top">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="@dimen/margin_twenty" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/margin_twenty" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/margin_twenty" />


            <TextView
                android:id="@+id/txt_signin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_ten"
                android:text="@string/str_sign_in"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_thirty"
                app:layout_constraintLeft_toRightOf="@id/guideline_inner_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_inner_right"
                app:layout_constraintTop_toBottomOf="@id/guideline_inner_top" />


            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_fifty_five"
                android:layout_margin="@dimen/margin_twelve"
                android:hint="@string/str_email_hint"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sixteen"
                app:layout_constraintBottom_toTopOf="@+id/et_password"
                app:layout_constraintLeft_toRightOf="@id/guideline_inner_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_inner_right"
                app:layout_constraintTop_toBottomOf="@+id/txt_signin" />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_fifty_five"
                android:layout_margin="@dimen/margin_twelve"
                android:hint="@string/str_password_hint"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textsize_sixteen"
                app:layout_constraintBottom_toTopOf="@+id/cv_go"
                app:layout_constraintLeft_toRightOf="@id/guideline_inner_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_inner_right"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_go"
                android:layout_width="@dimen/margin_fifty_five"
                android:layout_height="@dimen/margin_fifty_five"
                android:layout_margin="@dimen/margin_twenty"
                app:cardBackgroundColor="@color/colorPrimary"
                android:onClick="@{()->vmSignIn.clickSignIn()}"
                app:cardCornerRadius="@dimen/margin_threesixty"
                app:cardElevation="@dimen/margin_five"
                app:layout_constraintBottom_toTopOf="@+id/cl_forgot_pass"
                app:layout_constraintLeft_toRightOf="@id/guideline_inner_left"
                app:layout_constraintRight_toLeftOf="@id/guideline_inner_right"
                app:layout_constraintTop_toBottomOf="@+id/et_password">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_btn_go" />

            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_forgot_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_fifty_five"
                android:background="@drawable/bottom_curve_view"
                android:backgroundTint="@color/colorBlueLight"
                android:onClick="@{()->vmSignIn.clickForgotPass()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_go">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_forgot_pass"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/textsize_sixteen"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>